algoritmo "semnome"
// Função :
// Autor :
// Data : 03/02/2022
// Seção de Declarações 
var
   base , altura , area : real
inicio
      escreval ("qual a base do triangulo? " )
      leia (base)
      escreval ("qual a altura do triagulo? ")
      leia (altura)
      area <- (base * altura) / 2
      escreval("a área do triagulo é igual a: ", area)
fimalgoritmo
